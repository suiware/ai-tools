{
  "name": "@suiware/mcp",
  "version": "0.1.1",
  "description": "An stdio MCP server with built-in Suiware AI Tools.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "pnpx @modelcontextprotocol/inspector pnpm start",
    "start": "pnpm build && node dist/server.js --env-file=.env",
    "format": "prettier --write './src/**/*.{js,ts}'",
    "prepublishOnly": "pnpm build"
  },
  "bin": {
    "suiware-mcp-server": "./dist/server.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "sui",
    "suiware",
    "suiware-mcp",
    "suiware-mcp-server",
    "mcp",
    "ai"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@suiware/ai-tools": "^1.3.0",
    "ai": "^4.3.10",
    "commander": "^13.1.0",
    "dotenv": "^16.5.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
   "publishConfig": {
    "access": "public"
  },
   "repository": {
    "type": "git",
    "url": "git+https://github.com/suiware/ai-tools.git"
  },
  "bugs": {
    "url": "https://github.com/suiware/ai-tools/issues"
  }
}
